<Window x:Class="ExcelFlow.EmailPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aperçu des Emails Préparés"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Style bouton générique -->
        <Style x:Key="ButtonStyle"
                TargetType="Button">
            <Setter Property="Margin"
                    Value="5,0"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="MinWidth"
                    Value="150"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#333333"/>
        </Style>

        <!-- Style personnalisé pour le bouton Stop -->
        <Style x:Key="StopButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background"
                    Value="#8B0000"/>
            <!-- Rouge foncé par défaut -->
            <Setter Property="Foreground"
                    Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled"
                        Value="False">
                    <Setter Property="Background"
                            Value="#FFC0C0"/>
                    <!-- Rouge pâle quand désactivé -->
                    <Setter Property="Foreground"
                            Value="#660000"/>
                    <!-- Texte rouge foncé -->
                </Trigger>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#A52A2A"/>
                    <!-- Rouge un peu plus clair au survol -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style DataGridRow (inchangé) -->
        <Style TargetType="DataGridRow">
            <Setter Property="IsSelected"
                    Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                        Value="True">
                    <Setter Property="Background"
                            Value="Transparent"/>
                    <Setter Property="BorderBrush"
                            Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ligne 0: Sélection -->
            <RowDefinition Height="*"/>
            <!-- Ligne 1: DataGrid étirable -->
            <RowDefinition Height="5"/>
            <!-- Ligne 2: Splitter -->
            <RowDefinition Height="200"/>
            <!-- Ligne 3: Logs (initialement fixe) -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 4: Boutons -->
        </Grid.RowDefinitions>

        <!-- Zone de sélection -->
        <StackPanel Orientation="Horizontal"
                Grid.Row="0"
                Margin="0,0,0,10">
            <CheckBox x:Name="SelectAllCheckBox"
                      Content="Tout sélectionner"
                      Click="SelectAllCheckBox_Click"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"
                      FontSize="14"/>
            <TextBlock x:Name="SelectedEmailsCountTextBlock"
                       Text="Partenaires sélectionnés : 0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- DataGrid scrollable sans ScrollViewer supplémentaire -->
        <DataGrid Grid.Row="1"
                  x:Name="EmailsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="Cell"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  RowHeight="40"
                  MaxHeight="600"
                  MinHeight="100">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header=""
                                        Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="40"
                                        ElementStyle="{StaticResource {x:Type CheckBox}}"/>
                <DataGridTemplateColumn Header="Partenaire"
                        Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding PartnerNameList}"
                                      SelectedItem="{Binding SelectedPartner, Mode=TwoWay}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Fichier à envoyer"
                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding AttachmentFilePaths}"
                                      SelectedItem="{Binding SelectedAttachment, Mode=TwoWay}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Destinataires"
                        Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding ToRecipients}"
                                      SelectedItem="{Binding SelectedRecipient, Mode=TwoWay}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Statut"
                        Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center">
                                <ProgressBar Width="50"
                                             Height="8"
                                             IsIndeterminate="True"
                                             Visibility="{Binding IsSending, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="✔"
                                           Foreground="Green"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Visibility="{Binding IsSuccess, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="❌"
                                           Foreground="Red"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Visibility="{Binding IsFailure, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="2"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="#888888"
                      ShowsPreview="True"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"/>

        <!-- Zone logs -->
        <Border Grid.Row="3"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5"
                Background="#FFF9F9F9"
                Padding="5"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0"
                              VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="TxtLogs"
                             FontFamily="Consolas"
                             FontSize="12"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Background="Transparent"
                             BorderThickness="0"/>
                </ScrollViewer>

                <Button Grid.Column="1"
                        Content="🗑️"
                        FontSize="14"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="Vider les logs"
                        Click="ClearLogs_Click"/>
            </Grid>
        </Border>

        <!-- Ligne boutons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <Button x:Name="SendSelectedButton"
                    Content="Envoyer les emails sélectionnés"
                    Click="SendSelectedButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#FFFFFF"
                    Foreground="#000000"/>
            <Button x:Name="StopButton"
                    Content="Stop"
                    Click="StopButton_Click"
                    Style="{StaticResource StopButtonStyle}"
                    IsEnabled="False"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>

</Window>
