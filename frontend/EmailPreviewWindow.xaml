<Window x:Class="ExcelFlow.EmailPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aperçu des Emails Préparés"
        Height="650"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <!-- Style pour les boutons avec taille réduite -->
        <Style x:Key="ButtonStyle"
                TargetType="Button">
            <Setter Property="Margin"
                    Value="5,0"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="MinWidth"
                    Value="150"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#333333"/>
        </Style>
        <!-- Style pour désactiver la surbrillance des lignes sélectionnées -->
        <Style TargetType="DataGridRow">
            <Setter Property="IsSelected"
                    Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                        Value="True">
                    <Setter Property="Background"
                            Value="Transparent"/>
                    <Setter Property="BorderBrush"
                            Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10"
            LastChildFill="False">

        <!-- Barre de sélection globale en haut -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,15">
            <CheckBox x:Name="SelectAllCheckBox"
                      Content="Tout sélectionner"
                      Click="SelectAllCheckBox_Click"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"
                      FontSize="14"/>
            <TextBlock x:Name="SelectedEmailsCountTextBlock"
                       Text="Emails sélectionnés : 0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- DataGrid principal au centre -->
        <DataGrid x:Name="EmailsDataGrid"
                  DockPanel.Dock="Top"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="Cell"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  RowHeight="40"
                  MaxHeight="450">

            <DataGrid.Columns>

                <!-- Case à cocher interactive sans intitulé -->
                <DataGridCheckBoxColumn Header=""
                                        Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="40"
                                        ElementStyle="{StaticResource {x:Type CheckBox}}"/>

                <DataGridTemplateColumn Header="Partenaire"
                                        Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding PartnerNameList}"
                                      SelectedItem="{Binding SelectedPartner, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Fichier à envoyer"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding AttachmentFilePaths}"
                                      SelectedItem="{Binding SelectedAttachment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Destinataires"
                                        Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding ToRecipients}"
                                      SelectedItem="{Binding SelectedRecipient, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Statut"
                                        Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center">
                                <ProgressBar Width="50"
                                             Height="8"
                                             IsIndeterminate="True"
                                             Visibility="{Binding IsSending, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="✔"
                                           Foreground="Green"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Visibility="{Binding IsSuccess, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="❌"
                                           Foreground="Red"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Visibility="{Binding IsFailure, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- Boutons en bas à droite -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,10">
            <Button x:Name="SendSelectedButton"
                    Content="Envoyer les emails sélectionnés"
                    Click="SendSelectedButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#FFFFFF"
                    Foreground="#000000"/>
            <Button x:Name="StopButton"
                    Content="Stop"
                    Click="StopButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Background="#FF9999"
                    Foreground="White"
                    IsEnabled="False"/>
        </StackPanel>

    </DockPanel>
</Window>