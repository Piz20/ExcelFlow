<UserControl x:Class="ExcelFlow.Views.GenerationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ExcelFlow.Views"
             xmlns:utilities="clr-namespace:ExcelFlow.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="680">

    <UserControl.Resources>
        <utilities:StringIsNullOrEmptyConverter x:Key="StringIsNullOrEmptyConverter"/>

        <Style x:Key="ClearButtonStyle"
               TargetType="Button">
            <Setter Property="Width"
                    Value="20"/>
            <Setter Property="Height"
                    Value="20"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Setter Property="Margin"
                    Value="5 0 0 0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="Gray"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Zone du haut scrollable -->
            <RowDefinition Height="5"/>
            <!-- Splitter -->
            <RowDefinition Height="200"/>
            <!-- Zone logs initiale plus grande -->
        </Grid.RowDefinitions>

        <!-- ScrollViewer pour la zone du haut -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Titre -->
                <TextBlock Text="ExcelFlow - Génération de rapports"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <!-- Champs fichiers / dossiers -->
                <StackPanel Orientation="Vertical"
                            Margin="0 0 0 20">

                    <!-- Fichier Source -->
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0 0 0 10"
                            CornerRadius="5">
                        <DockPanel>
                            <TextBlock Text="Fichier Source (Excel) :"
                                       FontWeight="Bold"
                                       DockPanel.Dock="Top"
                                       Margin="0 0 0 5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtSourceFilePath"
                                         Grid.Column="0"
                                         Padding="5"/>
                                <Button x:Name="ClearSourceFileButton"
                                        Grid.Column="1"
                                        Content="✖"
                                        ToolTip="Effacer le chemin du fichier source"
                                        Click="ClearSourceFileButton_Click"/>
                                <Button x:Name="BtnSelectSourceFile"
                                        Grid.Column="2"
                                        Content="Sélectionner"
                                        Width="100"
                                        Margin="10 0 0 0"
                                        Click="BtnSelectSourceFile_Click"/>
                            </Grid>
                        </DockPanel>
                    </Border>

                    <!-- Fichier Modèle -->
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0 0 0 10"
                            CornerRadius="5">
                        <DockPanel>
                            <TextBlock Text="Fichier Modèle (Excel) :"
                                       FontWeight="Bold"
                                       DockPanel.Dock="Top"
                                       Margin="0 0 0 5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtTemplateFilePath"
                                         Grid.Column="0"
                                         Padding="5"/>
                                <Button x:Name="ClearTemplateFileButton"
                                        Grid.Column="1"
                                        Content="✖"
                                        ToolTip="Effacer le chemin du fichier modèle"
                                        Click="ClearTemplateFileButton_Click"/>
                                <Button x:Name="BtnSelectTemplateFile"
                                        Grid.Column="2"
                                        Content="Sélectionner"
                                        Width="100"
                                        Margin="10 0 0 0"
                                        Click="BtnSelectTemplateFile_Click"/>
                            </Grid>
                        </DockPanel>
                    </Border>

                    <!-- Dossier de sortie -->
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="5">
                        <DockPanel>
                            <TextBlock Text="Dossier de sortie"
                                       FontWeight="Bold"
                                       DockPanel.Dock="Top"
                                       Margin="0 0 0 5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtOutputDir"
                                         Grid.Column="0"
                                         Padding="5"/>
                                <Button x:Name="ClearOutputDirButton"
                                        Grid.Column="1"
                                        Content="✖"
                                        ToolTip="Effacer le chemin du dossier de sortie"
                                        Click="ClearOutputDirButton_Click"/>
                                <Button x:Name="BtnSelectOutputDir"
                                        Grid.Column="2"
                                        Content="Sélectionner"
                                        Width="100"
                                        Margin="10 0 0 0"
                                        Click="BtnSelectOutputDir_Click"/>
                            </Grid>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <!-- Index et nombre d'éléments -->
                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20"
                            HorizontalAlignment="Left">
                    <StackPanel Margin="0 0 20 0">
                        <TextBlock Text="Index de départ :"
                                   Margin="0 0 0 5"/>
                        <TextBox x:Name="TxtStartIndex"
                                 Width="100"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Nombre d'éléments :"
                                   Margin="0 0 0 5"/>
                        <TextBox x:Name="TxtCount"
                                 Width="100"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="1"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="#888888"
                      ShowsPreview="True"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"/>

        <!-- Logs + Progress -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logs -->
            <Border Grid.Row="0"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="5"
                    Background="#FFF9F9F9"
                    Margin="0,0,0,10"
                    Padding="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalAlignment="Stretch">
                        <TextBox x:Name="TxtLogs"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="3,2,0,0"
                                 VerticalContentAlignment="Top"/>
                    </ScrollViewer>

                    <Button Grid.Column="1"
                            Content="🗑️"
                            FontSize="14"
                            Width="28"
                            Height="28"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            ToolTip="Vider les logs"
                            VerticalAlignment="Top"
                            Click="ClearLogs_Click"/>
                </Grid>

            </Border>

            <!-- Progress + Boutons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <ProgressBar x:Name="ProgressGeneration"
                             Width="200"
                             Height="20"
                             Visibility="Collapsed"
                             Margin="0 0 10 0"/>
                <TextBlock x:Name="ProgressPercentageText"
                           Text="0%"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0 0 10 0"/>
                <Button x:Name="BtnGenerate"
                        Content="Générer"
                        Width="100"
                        Margin="0 0 10 0"
                        Click="BtnGenerate_Click"/>
                <Button x:Name="BtnStop"
                        Content="STOP"
                        Width="100"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnStop_Click"/>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
