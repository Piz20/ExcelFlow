<UserControl x:Class="ExcelFlow.Views.GenerationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ExcelFlow.Views"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="680"> <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="ExcelFlow - Génération de rapports"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0 0 0 20">
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 0 0 10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Fichier Source"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtSourceFilePath"
                                 Width="450"/>
                        <Button Content="Sélectionner"
                                Width="100"
                                Margin="10 0 0 0"
                                Click="BtnSelectSourceFile_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 0 0 10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Fichier Modèle"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtTemplateFilePath"
                                 Width="450"/>
                        <Button Content="Sélectionner"
                                Width="100"
                                Margin="10 0 0 0"
                                Click="BtnSelectTemplateFile_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Dossier de sortie"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtOutputDir"
                                 Width="450"/>
                        <Button Content="Sélectionner"
                                Width="100"
                                Margin="10 0 0 0"
                                Click="BtnSelectOutputDir_Click"/>
                    </StackPanel>
                </DockPanel> </Border>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0 0 0 20"
                    HorizontalAlignment="Left">
            <StackPanel Margin="0 0 20 0">
                <TextBlock Text="Index de départ :"
                           Margin="0 0 0 5"/>
                <TextBox x:Name="TxtStartIndex"
                         Width="100"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Nombre d'éléments :"
                           Margin="0 0 0 5"/>
                <TextBox x:Name="TxtCount"
                         Width="100"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0 0 0 10"
                    Background="#FFF9F9F9">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="TxtLogs"
                             FontFamily="Consolas"
                             FontSize="12"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"/>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 5 0 0">
                <ProgressBar x:Name="ProgressGeneration"
                             Width="200"
                             Height="20"
                             Visibility="Collapsed"
                             Margin="0 0 10 0"/>

                <TextBlock x:Name="ProgressPercentageText"
                           Text="0%"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0 0 10 0"/>
                <Button x:Name="BtnGenerate"
                        Content="Générer"
                        Width="100"
                        Margin="0 0 10 0"
                        Click="BtnGenerate_Click"/>

                <Button x:Name="BtnStop"
                        Content="STOP"
                        Width="100"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnStop_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>