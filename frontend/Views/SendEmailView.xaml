<UserControl x:Class="ExcelFlow.Views.SendEmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ExcelFlow.Views"
             xmlns:utilities="clr-namespace:ExcelFlow.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="550"
             d:DesignWidth="680">

    <UserControl.Resources>
        <utilities:StringIsNullOrEmptyConverter x:Key="StringIsNullOrEmptyConverter"/>

        <Style x:Key="ClearButtonStyle"
               TargetType="Button">
            <Setter Property="Width"
                    Value="20"/>
            <Setter Property="Height"
                    Value="20"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Setter Property="Margin"
                    Value="5 0 0 0"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="Gray"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="ExcelFlow - Envoi d'Emails aux Partenaires"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0 0 0 20">
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 0 0 10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Dossier des fichiers partenaires générés :"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="GeneratedFilesFolderTextBox"
                                 Grid.Column="0"
                                 HorizontalAlignment="Stretch"
                                 Padding="5"/>

                        <Button x:Name="ClearGeneratedFilesFolderButton"
                                Grid.Column="1"
                                Content="✖"
                                ToolTip="Effacer le chemin du dossier"
                                Click="ClearGeneratedFilesFolderButton_Click">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ClearButtonStyle}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=GeneratedFilesFolderTextBox, Converter={StaticResource StringIsNullOrEmptyConverter}}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="BrowseGeneratedFilesButton"
                                Grid.Column="2"
                                Content="Sélectionner"
                                Width="100"
                                Margin="10 0 0 0"
                                Click="BrowseGeneratedFilesButton_Click"/>
                    </Grid>
                </DockPanel>
            </Border>

            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 0 0 10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Fichier des mails des partenaires (Excel) :"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="PartnerEmailFilePathTextBox"
                                 Grid.Column="0"
                                 HorizontalAlignment="Stretch"
                                 Padding="5"/>

                        <Button x:Name="ClearPartnerEmailFileButton"
                                Grid.Column="1"
                                Content="✖"
                                ToolTip="Effacer le chemin du fichier"
                                Click="ClearPartnerEmailFileButton_Click">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ClearButtonStyle}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=PartnerEmailFilePathTextBox, Converter={StaticResource StringIsNullOrEmptyConverter}}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="BrowsePartnerEmailFileButton"
                                Grid.Column="2"
                                Content="Sélectionner"
                                Width="100"
                                Margin="10 0 0 0"
                                Click="BrowsePartnerEmailFileButton_Click"/>
                    </Grid>
                </DockPanel>
            </Border>

            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 0 0 10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Nom d'affichage de l'expéditeur (From) :"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="FromDisplayNameTextBox"
                                 Grid.Column="0"
                                 HorizontalAlignment="Stretch"
                                 Padding="5"/>
                        <Button x:Name="ClearFromDisplayNameButton"
                                Grid.Column="1"
                                Content="✖"
                                ToolTip="Effacer le nom d'affichage"
                                Click="ClearFromDisplayNameButton_Click">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ClearButtonStyle}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=FromDisplayNameTextBox, Converter={StaticResource StringIsNullOrEmptyConverter}}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </DockPanel>
            </Border>

            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0 0 0 10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Destinataires CC (facultatif, séparés par ;) :"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CcRecipientsTextBox"
                                 Grid.Column="0"
                                 HorizontalAlignment="Stretch"
                                 Padding="5"/>
                        <Button x:Name="ClearCcRecipientsButton"
                                Grid.Column="1"
                                Content="✖"
                                ToolTip="Effacer les destinataires CC"
                                Click="ClearCcRecipientsButton_Click">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ClearButtonStyle}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=CcRecipientsTextBox, Converter={StaticResource StringIsNullOrEmptyConverter}}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </DockPanel>
            </Border>

            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Destinataires BCC (facultatif, séparés par ;) :"
                               FontWeight="Bold"
                               Background="White"
                               DockPanel.Dock="Top"
                               Margin="0 0 0 5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="BccRecipientsTextBox"
                                 Grid.Column="0"
                                 HorizontalAlignment="Stretch"
                                 Padding="5"/>
                        <Button x:Name="ClearBccRecipientsButton"
                                Grid.Column="1"
                                Content="✖"
                                ToolTip="Effacer les destinataires BCC"
                                Click="ClearBccRecipientsButton_Click">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource ClearButtonStyle}">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=BccRecipientsTextBox, Converter={StaticResource StringIsNullOrEmptyConverter}}"
                                                     Value="False">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </DockPanel>
            </Border>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Logs -->
                <RowDefinition Height="Auto"/>
                <!-- Progression + boutons -->
            </Grid.RowDefinitions>

            <!-- Zone de logs -->
            <Border Grid.Row="0"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="5"
                    Background="#FFF9F9F9"
                    Padding="5"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0"
                                  VerticalScrollBarVisibility="Auto"
                                  Height="120">
                        <TextBox x:Name="TxtLogs"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </ScrollViewer>

                    <Border Grid.Column="1"
                            Width="2"
                            Margin="5,0"
                            Background="#888888"/>

                    <Button Grid.Column="2"
                            Content="🗑️"
                            FontSize="14"
                            Width="28"
                            Height="28"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            ToolTip="Vider les logs"
                            Click="ClearLogs_Click"/>
                </Grid>
            </Border>

            <!-- Progression et boutons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 5 0 0">
                <ProgressBar x:Name="ProgressBar"
                             Width="200"
                             Height="20"
                             Visibility="Collapsed"
                             Margin="0 0 10 0"/>

                <TextBlock x:Name="ProgressTextBlock"
                           Text="0%"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0 0 10 0"/>

                <TextBlock x:Name="ProgressMessageTextBlock"
                           Text="En attente..."
                           VerticalAlignment="Center"
                           Margin="0 0 10 0"
                           FontStyle="Italic"
                           Visibility="Collapsed"/>

                <Button x:Name="StartSendingButton"
                        Content="Démarrer l'envoi"
                        Width="150"
                        Margin="0 0 10 0"
                        Click="StartSendingButton_Click"/>

                <Button x:Name="CancelSendingButton"
                        Content="Annuler"
                        Width="100"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="CancelSendingButton_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>